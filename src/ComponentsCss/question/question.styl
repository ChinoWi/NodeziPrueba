//Mobile first

.mobile-user
	box-shadow 0 3px 3px rgba(0,0,0,0.15)
	background white
	padding 1em 0
	margin 3em 0
	height 170px
	position relative
.mobile-user:hover
	background #4A5352
.mobile-user:after
	height 3em
	width .3em
	background #273B47
	content ''
	position absolute
	left 46%
	bottom -3em
	z-index 1
	transform translateX(15px)
.mobile-ContentUser img
	border 1px solid #1E88E5
	width 50px
.mobile-usuario
	color #7F7F7F 
	border-bottom 1px solid #7F7F7F
