body
	background #EDF0F5

.header
	background blue
	&-contentImage
		margin 0

.nav
  background #005995
  list-style none
  margin 0
  max-height 50px
.nav-item
  display inline-block
  margin-left 2em
  box-sizing border-box
  line-height 16px
.nav-item a
  color white
  font-size 1.1em
  font-family 'Open Sans'
  font-weight normal
  display block
  height 50px
  padding 12px
  border-top 5px solid transparent
.nav-item a:focus
  background white
  color #005995
  font-weight bold
  

  

.footer
	background white
	padding .5em 0
	&-info
		max-width 500px
	&-aside
		padding 0 .5em
		a
			color #273B47
			text-decoration none
			margin 0 .5em
		
		


